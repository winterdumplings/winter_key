/* pages/my/my.wxss */
page{
  background: white;
}
.imagesize{
  display:flex;                  
  justify-content: center;
  align-items: center;
}
.loginimg{
  border-radius: 100%;
  width:600rpx;
  height:600rpx;
  margin-top: 150rpx;
}
.denglu{
  margin-top: 150rpx;
  margin-bottom: 150rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.userinfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 600rpx;
  margin:20rpx;
  background-color: #2CC2C3;
  box-shadow: 5px 5px 25px  gainsboro;
  border-radius: 12rpx;
}
.touxiang{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 180rpx;
  margin-bottom: 20rpx;
}
.dengchu{
  margin: 10rpx;
  display: block;
  width: 160rpx;
  height: 80rpx;
}
/* 条目 */
.item{
  background-color: gainsboro;
  border-radius: 12px;
  padding: 10px;
  margin: 10px;
}
.item_name{
  font-size: 42rpx;
  margin-left: 30rpx;
}
.button{
  width: 100%;
  background: gainsboro;
  border: none;
  text-align: left;
  padding: 0px;
  margin: 0px;
  line-height: 1.3;
  font-size: 16px;
}
.button::after{
  border: none;
  border-radius: 0;
}
.right_arrow{
  border: solid grey;
  border-width: 0 4px 4px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  margin-top: -30rpx;
}